<% provide(:title, "Posts") %>
<h1>Create a Post</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:post, url: posts_path) do |f| %>
      <p>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      </p>
      <p>
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control' %>
      </p>
      <p>
      <%= f.submit "Post", class: "btn btn-primary" %>
      </p>
  <% end %>
    
  </div>
</div>
