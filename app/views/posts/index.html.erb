<% provide(:title, 'Posts') %>
<h1>Posts</h1>

<div class="posts">
  <% @posts.each do |post| %>
    <p>
      <h3><%=post.title %></h3>
      <p><%=post.body %></p>
    </p>
    <% if logged_in? %>
      <p>Posted by: <%= post.user.username %></p>
    <% end %>
    <hr />
  <% end %>
<% if logged_in? %>
 <%= link_to "Create a Post", new_post_path %>
<% end %>
</div>
